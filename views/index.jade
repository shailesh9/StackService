Doctype
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href="bootstrap/css/bootstrap.min.css" crossorigin="anonymous")
        script(src="js/jquery-3.1.1.min.js")
        script(src="bootstrap/js/bootstrap.min.js")
        link(rel="stylesheet" href="bootstrap/css/bootstrap-theme.min.css" crossorigin="anonymous")
        title #{title}
    body
        div.container
            br
            h2 Stack Service
            form(id="post-stack" class="form-horizontal" role="form")
                div.row
                    div.col-md-4
                        div.input-group
                            input(type="number" id="stackItem" class="form-control" placeholder="Add Number" required)
                            button(class="btn btn-success" id="addToStack" type="submit") PUSH

                    div.col-md-2.view-stack
                        button(class="btn btn-info" id="viewStack" type="button") VIEW
                        if typeof stack !== "undefined"
                            h3 Current Stack Size: #{stack.length}
                        else
                            h3 Current Stack Size: 0
                    div.col-md-3.col-md-offset-3
                        table.table
                            thead
                                tr
                                    th Stack
                            tbody
                                if typeof stack !== "undefined"
                                    for item, i in stack
                                        tr(id="stack-"+ i)
                                            td #{item}
                        div.input-group
                            button(class="btn btn-danger" id="removeFromStack" type="button") POP
        script(src="js/stack.js")